FROM richarvey/nginx-php-fpm:3.1.6ENV WEBROOT /var/www/html/publicENV RUN_SCRIPTS 1ENV PHP_ERRORS_STDERR 1# Node for Vite + Postgres driver for LaravelRUN apk add --no-cache nodejs-current npm php82-pdo_pgsql php82-pgsqlWORKDIR /var/www/htmlCOPY . /var/www/htmlCOPY nginx/default.conf /etc/nginx/conf.d/default.conf# Build dependencies once at image build timeRUN composer install --no-interaction --prefer-dist --optimize-autoloader --no-devRUN npm ci || npm installRUN npm run buildCMD ["/start.sh"]